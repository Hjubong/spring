package com.test.spring.aop1;

import java.util.Calendar;

//보조 업무 객체
public class Logger {
	
	//보조 업무 구현
	public void log() {
		Calendar now = Calendar.getInstance();
		System.out.printf("[LOG][%tF %tT] 로그를 기록합니다\n", now, now);
	}
	
	public void time() {
		
		//주업무를 실행하는 소요시간
		
		long begin = System.nanoTime();
		System.out.println("[LOG] 기록을 시작합니다.");
		
		//주업무 실행
		//- 글쓰기
		
		
		
	}

}
